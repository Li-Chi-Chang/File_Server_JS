doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src="/javascripts/sidebar.js",type="text/javascript")
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js')
    script
      if(message)
        setTimeout(()=>{alert(message.text)},1)
  body
    button(class='sidebartoggle button', onclick='sidebarClick()') Menu
    div(class='sidebar hide-sidebar')
      li(class='sidebarItem')
        a(href='/login/out') logout
